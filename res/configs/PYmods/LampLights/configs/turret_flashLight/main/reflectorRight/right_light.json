{
//  К кому присоединить данный источник
    "player": true,
    "platoon": true,
    "ally": false,
    "enemy": false,
//  Тип источника: omniLight, spotLight, model
    "type": "omniLight",
//  Место расположения: front_left, front_right, back_left, back_right, wheels_left, wheels_right, roof, hull
    "root": "B_lamp_node",
//  Режим работы: constant, stop, turn_left, turn_right, back, target
    "mode": "constant",
//  Вращения осей координат в радианах Y X Z:
//  вращение вектора без смещения координат
    "preRotate": [0.0, 0.0, 0.0],
//  вращение системы координат
    "postRotate": [0.0, 0.0, 0.0],
//  Сдвиги по осям координат [вправо/вверх/вперед)
    "position": [0, 0, 0.1],
//  Яркость
    "multiplier": 150,
//  Внутренний радиус
    "innerRadius": 0.1,
//  Внешний радиус
    "outerRadius": 0.5,
//  Отбрасывание теней
    "castShadows": true,
//  Кадры анимации цвета источника
    "colour": [0, 0, 255, 0],
//  Список машин, для которых устанавливается данный источник
    "include": [], 
//  Список машин, на которые данный источник НЕ устанавливается
    "exclude": []
}